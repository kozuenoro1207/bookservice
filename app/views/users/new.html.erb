<div class="box">
<div class="row">
  <h1>新規登録</h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.text_field :name , class: "form-control", placeholder: "お名前" %>
      <%= f.text_field :email , class: "form-control", placeholder: "email" %>
      <%= f.password_field :password , class: "form-control",placeholder: "パスワード"%>
      <%= f.password_field :password_confirmation, class: "form-control",placeholder: "パスワード（確認）" %>

      <%= f.submit "新規登録", class: "btn btn-large btn-warning" %>
    <% end %>
  </div>
</div>
</div>