<%= form_for(@comment) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.hidden_field :talkroom_id , :value => talkroom.id %>
      <%= f.text_area :content, class: "form-control", placeholder: "発言する" %>
    </div>
    <%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>